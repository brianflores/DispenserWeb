extends layout

block content
    nav(class="navbar navbar-expand-md navbar-dark bg-dark")
        a(class="navbar-brand" href="#") Pet Center
    div(class="container-fluid")
        div(class="row")
            main(class="col-sm-12 ml-sm-auto col-md-12 pt-3", role="main")
                div(class="row")
                    div(class="col-sm-6 col-md-6")
                        h1 Configurar dispenser
                        section(class="col-sm-12 ml-sm-auto col-md-12 pt-3 row text-center placeholders")
                            div(class="container-fluid")
                                form(action="/", method="post", enctype="multipart/form-data")
                                    div(class="form-group row")
                                        input(placeholder="Hora dispenser", type="text", id="input_horaactual", class="form-control timepicker", name="input_horaactual")
                                        label(for="input_horaactual") Hora del dispenser
                                    div(class="form-group row")
                                        input(placeholder="Hora de alimentación", type="text", id="input_horaalarma", class="form-control timepicker", name="input_horaalarma")
                                        label(for="input_horaalarma") Hora de alimentación
                                    fieldset(class="form-group")
                                        div(class="row")
                                            label(for="selector") Tamaño de la ración
                                            select(class="form-control", id="selector", name="selector")
                                                option(value="pequenio", selected) Pequeño
                                                option(value="grande") Grande
                                    div(class="form-group")
                                        div(class="row")
                                            button(type="submit", class="btn btn-success") Guardar cambios
                    div(class="col-sm-1 col-md-1")
                    div(class="col-sm-4 col-md-4 jumbotron")
                        div(class="container")
                            h1(class="display-3") Configuración actual
                            div(class="container")
                                ul(class="nav nav-tabs")
                                    li
                                        h3 &nbsp;
                                ul(class="nav nav-tabs")
                                    li 
                                        h3(class="display-5") Hora de alimentación 
                                    li
                                        h3 :&nbsp;   
                                    li
                                        if conf.hora_alarma
                                            h3(class="display-5 text-muted")= conf.hora_alarma
                                ul(class="nav nav-tabs")
                                    li
                                        h3(class="display-5") Tamaño de ración:&nbsp;
                                    li
                                        if conf.racion
                                            if conf.racion == "pequenio"
                                                h3(class="display-5 text-muted") Pequeño
                                            else
                                                h3(class="display-5 text-muted") Grande
                h2 Últimos eventos
                div(class="table-responsive")
                    table(class="table table-striped")
                        thead
                            tr
                                th Fecha y hora
                                th Mensaje
                        tbody
                        each msj in mensajes
                            tr
                                td= msj.createdAt
                                td= msj.contenido
                           